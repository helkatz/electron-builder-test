{
  "name": "electron-builder-test",

  "author": {
    "name": "Helmut Katz",
    "email": "hkatz@gmx.at"
  },
  "description": "This project was generated with [Angular CLI]",
  "version": "0.0.10",
  "main": "dist/electron/main.js",
  "scripts": {
    "ng": "ng",
    "start:app:dev": "ng serve",
    "start:electron:dev": "wait-on http://localhost:4300 && npm run start:dev --prefix electron",
    "start:dev": "concurrently -s-last \"npm run build:electron:dev\" \"npm run start:app:dev\" \"npm run start:electron:dev\"",
    "start:electron": "npm run start --prefix electron",
    "start": "npm run build:electron && ng build &&  electron .",
    "build:app": "ng build",
    "build:electron": "npm run build --prefix electron",
    "build:electron:dev": "npm run build:dev --prefix electron",
    "build": "npm run updateversion && npm run build:electron && npm run build:app",
    "build:release": "electron-builder",
    "build:publish": "npx electron-builder --publish=always",
    "build:win": "npm run build && electron-builder --win --publish=always",
    "build:mac": "npm run build && electron-builder --mac --publish=always",
    "build:linux": "npm run build && electron-builder --linux --publish=always",
    "updateversion": "node update-version.js"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^18.2.0",
    "@angular/common": "^18.2.0",
    "@angular/compiler": "^18.2.0",
    "@angular/core": "^18.2.0",
    "@angular/forms": "^18.2.0",
    "@angular/platform-browser": "^18.2.0",
    "@angular/platform-browser-dynamic": "^18.2.0",
    "@angular/router": "^18.2.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.3.9",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.11",
    "@angular/cli": "^18.2.11",
    "@angular/compiler-cli": "^18.2.0",
    "@electron-forge/cli": "^7.7.0",
    "@electron-forge/maker-deb": "^7.7.0",
    "@electron-forge/maker-rpm": "^7.7.0",
    "@electron-forge/maker-squirrel": "^7.7.0",
    "@electron-forge/maker-zip": "^7.7.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.7.0",
    "@electron-forge/plugin-fuses": "^7.7.0",
    "@electron/fuses": "^1.8.0",
    "@types/jasmine": "~5.1.0",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.7",
    "electron": "35.0.1",
    "electron-builder": "^25.1.8",
    "jasmine-core": "~5.2.0",
    "jsonfile": "^6.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.5.2",
    "wait-on": "^8.0.3"
  }
}
